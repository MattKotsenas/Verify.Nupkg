<Project>

  <PropertyGroup>
    <VerifyNupkgBaselineFile Condition=" '$(VerifyNupkgBaselineFile)' == '' ">$(MSBuildProjectDirectory)/$(MSBuildProjectName).verified.nuspec</VerifyNupkgBaselineFile>
  </PropertyGroup>

  <Target
    Name="_VerifyNupkgGenerateNuspecBaseline"
    AfterTargets="Pack"
    DependsOnTargets="$(PackDependsOn)"
    Inputs="@(NuGetPackOutput);$(NuspecFileAbsolutePath)"
    Outputs="$(IntermediateOutputPath)/Verify.Nupkg.Tasks.stamp"
    >

    <!-- TODO: Verify incremental build -->
  
    <VerifyNuspec
      NuspecFileAbsolutePath="$(NuspecFileAbsolutePath)"
      NuGetPackOutput="@(NuGetPackOutput)" />

    <Touch
      Files="$(IntermediateOutputPath)/Verify.Nupkg.Tasks.stamp"
      AlwaysCreate="true" />
  </Target>
</Project>
