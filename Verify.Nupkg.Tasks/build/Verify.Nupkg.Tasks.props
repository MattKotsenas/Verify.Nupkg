
<Project TreatAsLocalProperty="TaskFolder;TaskAssembly">

  <PropertyGroup Label="TreatAsLocal properties">
    <TaskFolder Condition=" '$(MSBuildRuntimeType)' == 'Core' ">net8.0</TaskFolder>
    <TaskFolder Condition=" '$(MSBuildRuntimeType)' != 'Core' ">net472</TaskFolder>
    <TaskAssembly>$(MSBuildThisFileDirectory)../tasks/$(TaskFolder)/Verify.Nupkg.Tasks.dll</TaskAssembly>
  </PropertyGroup>

  <PropertyGroup>
  </PropertyGroup>

  <UsingTask TaskName="VerifyNuspec" AssemblyFile="$(TaskAssembly)" />
</Project>
